<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Convo</title>

    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="js/client.js"></script>
    <script>
        const loggedInUser = "{{username}}";
    </script>

    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
    <div class="container">
        <nav class="navbar">
            <div class="center-content">
                <h1 class="header">Convo</h1>
                <img class="logo" src="icons8-chat-100.png" alt="Logo" />
            </div>

            <a href="/requests" class="btn-requests">Requests</a>
        </nav>




        <div class="main">


            <div class="left">
                <div class="chatlist">
                    <div class="chats">
                        <h5>Naimi</h5>
                        <p>hii</p>
                    </div>

                    <div class="chats">
                        <h5>Emma</h5>
                        <p>hey </p>
                    </div>
                </div>
            </div>

            <div class="right">
                <div class="msgcontainer">
                    <!-- Messages will appear here -->
                </div>

                <div class="send">
                    <form action="#" id="send-container">
                        <input type="text" name="msginp" id="msginp" placeholder="Type your message..." />
                        <button class="btn" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>

        const CURRENT_USERNAME = "{{ username }}";

        localStorage.setItem("username", CURRENT_USERNAME);

        async function loadFriends() {
            try {
                const res = await fetch("/get-friends");
                const data = await res.json();
                const chatlist = document.querySelector(".chatlist");
                chatlist.innerHTML = ""; // clear old chats

                if (data.friends.length === 0) {
                    chatlist.innerHTML = "<p>No friends yet</p>";
                } else {
                    data.friends.forEach(friend => {
                        const div = document.createElement("div");
                        div.classList.add("chats");
                        div.innerHTML = `
                    <h5>${friend}</h5>
                `;
                        div.addEventListener("click", () => {
                            openChatWith(friend); // function to handle private chat
                        });
                        chatlist.appendChild(div);
                    });
                }
            } catch (err) {
                console.error(err);
            }
        }

        // Call on page load
        loadFriends();

        // Example function to open chat
        function openChatWith(friend) {
            console.log("Start chat with:", friend);
            // Here you can implement logic to load previous messages or start new chat
        }


    </script>
</body>

</html>